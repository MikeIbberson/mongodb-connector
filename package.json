{
  "name": "@ibberson92/mongodb-connector",
  "version": "1.1.1",
  "description": "MongoDB Connector for GraphQL using Facebook's DataLoader",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --watch --runInBand",
    "dev": "nodemon src --exec babel-node -r dotenv.config.js",
    "prepublish": "babel src --out-dir dist"
  },
  "author": "MikeIbberson",
  "license": "ISC",
  "dependencies": {
    "dataloader": "^1.4.0",
    "mongodb": "^3.1.13",
    "sift": "^7.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "dotenv": "^7.0.0",
    "jest": "^24.5.0",
    "mongodb-memory-server": "^4.2.1",
    "nodemon": "^1.18.10"
  },
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "__DEV__": true
    },
    "setupFilesAfterEnv": [
      "<rootDir>/dotenv.config.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
